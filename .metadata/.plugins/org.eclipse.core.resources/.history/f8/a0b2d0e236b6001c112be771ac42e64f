package com.regex;

import java.util.regex.Pattern;

public class RegExTest3 {

	public static void main(String[] args) {
		// [a-z][a-zA-Z][0-9]

		System.out.println(Pattern.matches("[0-9]{3}", "!23")); // false but true if 123

		System.out.println(Pattern.matches("[a-zA-Z]{5}", "Apple"));
		System.out.println("name valid");

		System.out.println(Pattern.matches("[A-Z][a-z]+( [A-Za-z]+)?", "happy Guy"));

		// email validation
		System.out.println("email valid");
		// [A-Za-z+_.-]+@(.+)$
		System.out.println(Pattern.matches("^[A-Za-z+_.-]+@(.+)$", "ami@dos.com"));

		// phone number validation starts with 8 or 9
		System.out.println(Pattern.matches("[8-9]{1}[0-9]{9}", "8107142274"));

		System.out.println(Pattern.matches("^(.[//d]+)@(.+)$", "atuljha381@gmail.com"));

		System.out.println("Address valid");
		System.out.println(Pattern.matches("(^[#.0-9a-zA-Z\\s,-]{10,80})$", "2045G,Se"));

		// phone number validation starts with 8 or 9
		System.out.println(Pattern.matches("[A-Za-z]", "Rajesh"));

	}

}
