package com.registration;

import java.util.regex.Pattern;

public class RegHandler {
	public boolean checkAddress(Registration registration) {
		if (Pattern.matches("([0-9a-zA-Z]+[,-]){10,80}", registration.getAddress())) {
			return true;
		}
		return false;
	}

	public boolean checkNumber(Registration registration) {
		if (Pattern.matches("[7-9]{1}[0-9]", registration.getMobno())) {
			return true;
		}
		return false;
	}

	public boolean checkEmail(Registration registration) {
		if (Pattern.matches("^(.+)+@(.+)$", registration.getEmailString())) {
			return true;
		}
		return false;
	}
}
