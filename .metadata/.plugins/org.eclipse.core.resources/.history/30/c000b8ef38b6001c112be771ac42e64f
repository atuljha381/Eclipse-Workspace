package com.registration;

import java.util.regex.Pattern;

public class RegHandler {

	public boolean checkName(String fname, String lname) {
		if (Pattern.matches("[A-Z]{1}[a-z]+", fname) && Pattern.matches("[A-Z]{1}[a-z]+", lname)) {
			return true;
		}
		return false;
	}

	public boolean checkAddress(String str) {
		if (Pattern.matches("(^[#.0-9a-zA-Z\\s,-]{10,80})$", str)) {
			return true;
		}
		return false;
	}

	public boolean checkNumber(String str) {
		if (Pattern.matches("[7-9]{1}[0-9]{9}", str)) {
			return true;
		}
		return false;
	}

	public boolean checkEmail(String str) {
		if (Pattern.matches("^(.+)+@(.+)$", str)) {
			return true;
		}
		return false;
	}

	public Registration allValid(Registration registration) {
		Registration r = null;
		if (checkAddress(registration.getAddress())) {
			if (checkNumber(registration.getMobno())) {
				if (checkEmail(registration.getEmailString())) {
					if (checkName(registration.getFname(), registration.getLname())) {
						r=registration;
					}
				}
			}
		}
		return r;
	}
}
